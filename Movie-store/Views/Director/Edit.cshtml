@model Movie_store.Models.Director

@{
    ViewData["Title"] = "Edit";
    List<Movie> movies = ViewData["Movies"] as List<Movie>;
}

<h1>Edit</h1>

<h4>Director</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <img src="~/img/@Model.Image" id="previewImage" class="img-fluid" />
                <input asp-for="UploadImage" class="form-control" />
                <span asp-validation-for="UploadImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlaceofBirth" class="control-label"></label>
                <input asp-for="PlaceofBirth" class="form-control" />
                <span asp-validation-for="PlaceofBirth" class="text-danger"></span>
            </div>

            @*<div class="form-group">
                <label asp-for="IDMovie" class="control-label">Movie</label>
                <select asp-for="IDMovie" class="form-control" asp-items="@(new SelectList(movies,"ID","Title"))"></select>
            </div>*@

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#previewImage').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]); // convert to base64 string
            }
        }

        $("#UploadImage").change(function () {
            readURL(this);
        });
    </script>
}
