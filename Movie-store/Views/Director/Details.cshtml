@model Movie_store.Models.Director

@{
    ViewData["Title"] = "Details";
    List<Movie> movies = ViewData["Movies"] as List<Movie>;
}

<h1>Details</h1>

<div>
    <h4>Director</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class="col-sm-10">
            <img class="img-fluid img-thumbnail" src="~/img/@Model.Image" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlaceofBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlaceofBirth)
        </dd>

        <div class="col-sm-3">
            @foreach (var item in movies)
            {
                <div class="card">
                    <img class="card-img-top img-fluid img-thumbnail" src="~/img/@item.Image" />
                    <div class="card-body">
                        <h3>@item.Title</h3>
                        <h5>Release in: @item.ReleaseDate.ToShortDateString()</h5>
                        <h5>By: @item.Producer.FullName</h5>
                    </div>
                </div>
            }
        </div>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="List">Back to List</a>
</div>
